<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.snapdeal.merchant.dao.IFilterDao">
	
	<resultMap id="filterInfoResult" type="filterEntity">
		<result property="id" column="id" />
		<result property="filterMetaData" column="filter_metadata" />
		<result property="filterHash" column="filter_hash" />
		<result property="createdOn" column="created_on" />
	</resultMap>

	<select id="getFilterInfo" resultMap="filterInfoResult" parameterType="filterEntity">
		select t.id as id, t.filter_metadata as filter_metadata , t.filter_hash as filter_hash from filter t  where t.id = #{id}
	</select>
	
	<insert id="insertFilterInfo" parameterType="filterEntity" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into filter (filter_hash,filter_metadata,created_on) values(#{filterHash},#{filterMetaData},CURRENT_TIMESTAMP())
	</insert>

</mapper>
