		<jdbc:script location="classpath:migration/activity_log.sql" />
		<jdbc:script location="classpath:migration/client.sql" />
		<jdbc:script location="classpath:migration/configuration.sql" />
		<jdbc:script location="classpath:migration/freeze_account.sql" />

		<jdbc:script location="classpath:migration/global_token_details.sql" />
		<jdbc:script location="classpath:migration/lock_user.sql" />
		<jdbc:script location="classpath:migration/token_details.sql" />
		<jdbc:script location="classpath:migration/user_otp.sql" />
		<jdbc:script location="classpath:migration/user_verification.sql" />
		<jdbc:script location="classpath:migration/discrepencyCount.sql" />
		<jdbc:script location="classpath:migration/user.sql" />
		<jdbc:script location="classpath:migration/blacklist.sql" />
		<jdbc:script location="classpath:migration/user_history.sql" />
	</jdbc:embedded-database>
	
	
