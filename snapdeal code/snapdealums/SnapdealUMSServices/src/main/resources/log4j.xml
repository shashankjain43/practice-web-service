<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<!-- Rolling file Appender -->
	<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/server.log" />
		<param name="Append" value="true" />
		<param name="Threshold" value="INFO" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE}#%X{requestId} %-5p [%c{1}] - %m%n" />
		</layout>
	</appender>

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="Threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE}#%X{requestId} %-5p [%c{1}] - %m%n" />
		</layout>
	</appender>
	
	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="500" />
		<appender-ref ref="FILE" />
	</appender>
	
	<logger name="org.jboss.resteasy">
		<level value="OFF" />
		<appender-ref ref="FILE" />
	</logger>
	<root>
		<!-- appender-ref ref="CONSOLE" / -->
		<priority value="info"></priority>
		<appender-ref ref="ASYNC" />
	</root>
	
	<appender name="velocity_log" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/velocity.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="1" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{HH:mm:ss,SSS}#%X{requestId} %-5p [%C{1}] - %m%n" />
		</layout>
	</appender>
	<logger name="velocity">
		<level value="info" />
		<appender-ref ref="velocity_log" />
	</logger>
	
</log4j:configuration>
